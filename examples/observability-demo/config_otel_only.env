# OTEL-Only Configuration for OpenFilter Demo
# This configuration enables OTEL export without OpenLineage

# =============================================================================
# OpenTelemetry Configuration
# =============================================================================

# Enable telemetry export
TELEMETRY_EXPORTER_ENABLED=true

# OTEL Exporter Configuration
# TELEMETRY_EXPORTER_TYPE=console
TELEMETRY_EXPORTER_TYPE=otlp

# OTEL Collector Endpoint (replace with your cloud provider URL)
# Examples:
#   Google Cloud: https://your-project.googleapis.com:4317
#   AWS X-Ray: https://your-region.awsxray.amazonaws.com:4317  
#   Azure Monitor: https://your-workspace.azure.com:4317
#   Jaeger: https://your-jaeger.com:14250
#   Zipkin: https://your-zipkin.com:9411/api/v2/spans
OTEL_EXPORTER_OTLP_ENDPOINT=<your-endpoint>

# OTEL Authentication Headers (if required by your cloud provider)
# Format: key1=value1,key2=value2
# Examples:
#   Google Cloud: authorization=Bearer YOUR_TOKEN
#   AWS: x-aws-access-key-id=YOUR_KEY,x-aws-secret-access-key=YOUR_SECRET
#   Custom: x-api-key=YOUR_API_KEY
# OTEL_EXPORTER_OTLP_HEADERS=authorization=Bearer YOUR_TOKEN

# OTEL Protocol (grpc or http/protobuf)
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf

# Export interval in seconds
OTEL_EXPORT_INTERVAL=3

# =============================================================================
# OpenFilter Configuration  
# =============================================================================

# Service identification
SERVICE_NAME=openfilter-otel-demo
SERVICE_NAMESPACE=observability
PROJECT_ID=your-project-id

# Export interval for metrics (milliseconds) 
EXPORT_INTERVAL=3000

# =============================================================================
# Safe Metrics Configuration
# =============================================================================

# Path to safe metrics allowlist (optional)
# OF_SAFE_METRICS_FILE=safe_metrics_otel.yaml

# Or inline safe metrics (comma-separated)
OF_SAFE_METRICS=detections_per_frame,confidence_score,processing_time,object_size_ratio,fps,cpu,memory,latency_in,latency_out

# =============================================================================  
# OpenLineage Configuration (DISABLED for OTEL-only demo)
# =============================================================================

# Leave these empty/unset to disable OpenLineage
# OPENLINEAGE_URL=
# OPENLINEAGE_API_KEY=
# OPENLINEAGE__HEART__BEAT__INTERVAL=
# OPENLINEAGE_EXPORT_RAW_DATA=false

# =============================================================================
# Demo-Specific Configuration
# =============================================================================

# Detection threshold for the custom processor
DETECTION_THRESHOLD=0.5

# Export mode: raw, aggregated, or both
EXPORT_MODE=both

# Target: otel, openlineage, or both  
TARGET=otel
