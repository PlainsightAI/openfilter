# OpenFilter Observability Demo Configuration
# Copy this file to config.env and modify as needed

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Input video source
VIDEO_SOURCE=file://sample_video.mp4!loop

# Output configuration
OUTPUT_FPS=30
OUTPUT_DIR=output

# Detection parameters
DETECTION_THRESHOLD=0.5
MAX_DETECTIONS=10

# =============================================================================
# OPENTELEMETRY CONFIGURATION
# =============================================================================

# Enable/disable telemetry
TELEMETRY_EXPORTER_ENABLED=true

# Telemetry exporter type (console, otlp, prometheus)
TELEMETRY_EXPORTER_TYPE=console

# OTLP endpoint (for otlp exporter)
TELEMETRY_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Export interval in milliseconds
EXPORT_INTERVAL=30000

# =============================================================================
# OPENLINEAGE CONFIGURATION
# =============================================================================

# OpenLineage server URL
OPENLINEAGE_URL=https://oleander.dev

# OpenLineage API key
OPENLINEAGE_API_KEY=your_api_key_here
OPENLINEAGE_VERIFY_CLIENT_URL=True             # True or False, required for self-signed certificates, usually in production

# OpenLineage heartbeat interval (seconds)
OPENLINEAGE__HEART__BEAT__INTERVAL=10

# Safe metrics allowlist (comma-separated)
OF_SAFE_METRICS=frames_processed,frames_with_detections,detections_per_frame_histogram,detection_confidence_histogram,processing_time_ms_histogram,object_size_ratio_histogram

# Alternative: YAML file with allowlist (takes precedence over OF_SAFE_METRICS)
# OF_SAFE_METRICS_FILE=safe_metrics.yaml

# Raw subject data export (optional)
# Set to true to include raw frame data in OpenLineage heartbeats
# WARNING: This may expose PII - use with caution
OPENLINEAGE_EXPORT_RAW_DATA=false

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Metrics interval (seconds)
METRICS_INTERVAL=5

# Message queue logging (none, pretty, all)
MQ_LOG=pretty

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# For local development with console output:
# TELEMETRY_EXPORTER_ENABLED=true
# TELEMETRY_EXPORTER_TYPE=console

# For production with OTLP:
# TELEMETRY_EXPORTER_ENABLED=true
# TELEMETRY_EXPORTER_TYPE=otlp
# TELEMETRY_EXPORTER_OTLP_ENDPOINT=http://your-otel-collector:4317

# For OpenLineage only:
# TELEMETRY_EXPORTER_ENABLED=true
# OPENLINEAGE_URL=https://your-oleander-instance.com
# OPENLINEAGE_API_KEY=your_actual_api_key 